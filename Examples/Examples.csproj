<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp2.1</TargetFrameworks>
    <!-- It's not possible to build on Unix systems using dotnet build without specifying the TargetFramework -->
    <UseFullFramework Condition=" '$(OS)' == 'Windows_NT' ">true</UseFullFramework>
    <TargetFrameworks Condition=" '$(UseFullFramework)' == 'true' ">$(TargetFrameworks);net461</TargetFrameworks>
    <OutputType>Exe</OutputType>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\src\dnlib.csproj" />
  </ItemGroup>

</Project>
